{
  "name": "Git Kanban Self Hosted",
  "version": "1.0",
  "description": "Kanban extensions for self hosted github, gitlab, bitbucket, and gitea",
  "manifest_version": 2,
  "author": "http://github.com/lastlink",
  "background": {
    "scripts": [
      "src/js/bg.js"
    ],
    "persistent": true
  },
  "homepage_url": "http://github.com/lastlink",
  "permissions": [
    "storage",
    "<all_urls>",
    "tabs",
    "webNavigation"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/js/gitlab/index.js",
        "src/js/github/index.js",
        "src/js/gitea/index.js",
        "src/js/injected.js"
      ],
      "css": [
        "src/css/main.css"
      ],
      "run_at": "document_end"
    }
  ]
}